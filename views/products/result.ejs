<!DOCTYPE html>
<html lang="es">

  <%- include('../partials/head.ejs',{
    title: "Sneakers | Resultados"
  }) %>

<body>

  <%- include('../partials/header.ejs') %> 

  <main class="result my-auto">

    <section class="container-fluid mx-auto my-auto row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">


    <% if (productsFilter.length > 0) { %>
        
        <h2 class="w-100 text-black text-left p-2 fs-1 ">Resultados a : <span style="color:var(--Primario)"><%= keyword.toUpperCase() %></span> </h2>
        
        <% productsFilter.forEach(product => { %>
          
          <div class="col">
            <a class="text-black" href="/products/detail/<%= product.id %> ">
              <div class="card">
                <img src="/images/<%= product.img %> " class="card-img-top" alt="...">
                <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
                  <h5 class="card-title w-100"><%= product.name %> </h5>
                  <p class="card-text w-40 mb-0">$<%= product.price %> </p>
                  <a href="" class="w-30 cart"><i class="fa-solid fa-cart-shopping text-success p-2 bg-white border rounded-circle shadow bg-white rounded"></i></a>
                </div>
              </div>
            </div>
            </a>
        <% }) %>
    <% } else { %>
        
        <section class="container d-flex align-items-center w-100" style="height: 68vh;">
            
            <h2 class="w-100 text-black text-center p-2 fs-1 ">Lo sentimos, no encontramos resultado para : <span style="color:var(--Primario); "><%= keyword.toUpperCase() %></span> </h2>

           

        </section>

    <% } %>


    </section>

  </main>
  <%- include('../partials/footer.ejs') %> 
 
</body>
</html>